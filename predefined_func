// strchr  - To return pointer to the first occurence of given character in a Array Of characters (string) else returns NULL

cout << ( strchr( "adjfbhfsd" , 'a'  ) != NULL  ) <<"\n;

char *ptr = strchr("sdfadf" , 's' );

OR

char str[] = "dfsadf";
auto ptr = strchr( str , 's' );
cout<< ptr - str + 1 << "\n";

